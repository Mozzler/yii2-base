<{{ widget.tag }} id="{{ widget.id }}" {{ html.renderTagAttributes(widget.options) }}>
	<{{ widget.container.tag }} {{ html.renderTagAttributes(widget.container.options) }}>
	    <{{ widget.buttonsContainer.tag }} {{ html.renderTagAttributes(widget.buttonsContainer.options) }}>
	        <{{ widget.buttonsContainer.filter.tag }} href="#" {{ html.renderTagAttributes(widget.buttonsContainer.filter.options) }}>{{ widget.buttonsContainer.filter.text }}</{{ widget.buttonsContainer.filter.tag }}>
			{% if widget.canExportModel %}
				<a href="{{ widget.exportUrl }}" target="_blank" class="btn btn-default btn-sm" title="Download as .csv file">Export <span class="glyphicon glyphicon-download-alt"></span></a>
			{% endif %}
			{% if widget.canCreateModel %}
    			<a href="{{ widget.model.getUrl("create") }}" class="btn btn-primary btn-sm">Create {{ widget.model.modelConfig('label') }}</a>
    		{% endif %}
        </{{ widget.buttonsContainer.tag }}>
		{{ t.renderWidget("mozzler.base.widgets.model.FilterModel", {"model": widget.model}) }}
	</{{ widget.container.tag }}>
</{{ widget.tag }}>
