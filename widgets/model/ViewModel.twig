<{{ widget.tag }} id="{{ widget.id }}" {{ html.renderTagAttributes(widget.options) }}>
    {% set bodyContent %}
        {{ t.renderWidget("mozzler.base.widgets.ui.Columns", {
        	'items': widget.items
	    }) }}
    {% endset %}
    
    <{{ widget.container.tag }} {{ html.renderTagAttributes(widget.container.options) }}>
        {{ t.renderWidget("mozzler.base.widgets.bootstrap.Panel", arrayhelper.merge({
            "body": {
                "content": bodyContent
            }
        }, widget.panelConfig)) }}
    </{{ widget.container.tag }}>
</{{ widget.tag }}>